# Используем официальный образ Node.js
FROM node:18

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем файлы проекта
COPY . .

# Устанавливаем зависимости
RUN npm install

# Собираем проект
RUN npm run build

# Открываем порт
EXPOSE 3000

# Команда для запуска приложения
CMD ["npm", "run", "preview"]